<h3>Comments</h3>

<div id = "new_comment">
<%= form_for @comment do |f| %>
	<p><%= @comment.errors.full_messages.first %><p>

 	<p><%= f.label "Select a facility" %></p>
    <p><%= f.select :facility_id, options_from_collection_for_select(Facility.order("name"), 'id', 'name') %></p>

	<p>
		<%= text_area_tag ("Enter comment here:", :size => "50x10") %>
		<%= f.text_field :content %>
	</p>
	
	<p><%= f.submit ("Post Comment") %></p>
<% end %>
</div>