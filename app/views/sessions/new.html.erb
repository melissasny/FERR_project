<h3>Login</h3>

<div id = "new-session">
<%= form_tag sessions_path do %>

	<p>
		<%= label_tag :user_name %> <br/>
		<%= text_field_tag :user_name, params[:user_name] %>
	</p>

	<p>
		<%= label_tag :password %><br/>
		<%= password_field_tag :password %>
	</p>

<%= submit_tag "Log In"%>

<% end %>
</div>